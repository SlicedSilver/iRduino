<Window x:Class="iRduino.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="An Error has Occured... Sorry about that!" Height="300" Width="500">
    <Grid>
        <Image HorizontalAlignment="Left" Height="50" Margin="10,10,0,0" VerticalAlignment="Top" Width="50" Source="/iRduino;component/Resources/ErrorBig.png"/>
        <TextBlock Margin="70,20,10,0" TextWrapping="Wrap" Text="An error has occured. Please notify the developer with a copy of the information in this window and your current configuration file. " VerticalAlignment="Top" Height="40" FontWeight="Bold" Foreground="#FF970202"/>
        <TextBox x:Name="ErrorTextBox" Margin="10,70,10,10" TextWrapping="Wrap" Text="" BorderBrush="#FFDA0101" Background="#FFEAEAEA" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True"/>

    </Grid>
</Window>
